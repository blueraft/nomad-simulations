        "version": "0.2.0",
        "configurations": [
            {
                "name": "tests",
                "type": "python",
                "request": "launch",
                "console": "integratedTerminal",
                "cwd": "${workspaceFolder}",
                "env": {
                    "PYTHONPATH": "${workspaceFolder}/.pyenv:${env:PYTHONPATH}"
